void main_menu()
{

	int choice;

	do
	{
			cout<<"Hello, Would you like to log in or register?" "\n"
			"[1] Login" "\n"
			"[2] Register" "\n"
			"[3] Exit""\n";
		cout << "Enter ur choise:";
		cin >> choice;
		switch (choice)
		{
		case 1:
			//login();
			break;
		case 2:
			register_user();
			break;
		case 3:
			exit(1);
			break;
		
			
		}
	} while (true);
}

